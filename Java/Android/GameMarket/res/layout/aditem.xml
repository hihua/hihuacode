<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/aditem_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.apps.game.market.view.ScrollViewAd
            android:id="@+id/aditem_view"
            android:layout_width="fill_parent"
            android:layout_height="128dp"
            android:clickable="true" />

        <LinearLayout
            android:id="@+id/aditem_layout_line"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ad_desc_line" >

            <TextView
                android:id="@+id/aditem_textview_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/aditem_textview_position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/aditem_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/aditem_layout_line"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ad_desc_triangle" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/aditem_layout_column"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>